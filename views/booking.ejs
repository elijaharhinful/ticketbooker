<!DOCTYPE html>
<html lang="en">
    <head>
        <script src="/public/js/jquery-3.2.0.min.js"></script>
    </head>
<% include partials/dashboard-head.ejs %>
    <% include partials/confirm.ejs %>
    <% include partials/pay.ejs %>
    <% include partials/busdestination.ejs %>
   

        <body style="font-family: 'Nunito', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
            <div id="page">

                <div id="main">
                    <div class="container-fluid" >
                        <div class="row">
                            <% include layouts/dashboard-header.ejs %>
                                <div class="col-sm-3" style="padding-left:0px">
                                    <div id="mySidenav" class="sidenav panel">
                                        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                                        <img src="\public\img\images1.jpg" class="img-circle" alt="User image" width="150" height="150">
                                        <h3>Welcome</h3>
                                        <h4>Elijah</h4>
                                        <div style="width:50%;margin:auto;margin-bottom:20px;">
                                                <a class="btn btn-default btn-success btn-block" href="/booking">Book ticket</a>
                                        </div>
                                        <ul class="nav nav-pills nav-stacked">
                                            <li>
                                                <a href="/dashboard">
                                                        <i class="glyphicon glyphicon-home"></i>
                                                        Dashboard
                                                </a>
                                            </li>
                                            <li>
                                                <a href="/history">
                                                        <i class="glyphicon glyphicon-shopping-cart"></i>
                                                    Tickets
                                                </a>
            
                                            </li>
                                            <li>
                                                <a href="/profile"> 
                                                        <i class="glyphicon glyphicon-user"></i>
                                                        Profile
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                        <i class="glyphicon glyphicon-comment"></i>
                                                        Help
                                                </a>
                                            </li>
                                            <li>
                                                <a href="/booking#contact"> 
                                                        <i class="glyphicon glyphicon-phone-alt"></i>
                                                        Contact us
                                                </a>
                                            </li>
                                            <li>
                                                <a href="/index">
                                                        <i class="glyphicon glyphicon-log-out"></i>
                                                        Logout
                                                </a>
                                            </li>
                                        </ul>
                                    </div>

                                </div>
                                <div class="col-sm-6" style="margin-top:10px;">
                                    <div id="">
                                        <div class="container_fluid">
                                            <h2 style="text-align: center">BOOK YOUR TICKET</h2>
                                            <hr>
                                            <h3 style="text-align: center">Choose any bus company</h3>
                                            <hr>
                                            <% for (var i = 0;i < companyname.length; i++){ %>
                                                <div class="card" style="width:100%;margin:auto">
                                                        <div class="row">
                                                            <div class="col-sm-4">
                                                                <img class="img-responsive" src="public\img\images1.jpg" alt="Company logo">
                                                            </div>
                                                            <div class="col-sm-4">
                                                                <div class="card-body text-center">
                                                                    <h1 class="card-title"><%=companyname[i].name %></h1>
                                                                    <p class="card-text"><%=companyname[i].extra %></p>
                                                                    <a data-toggle="modal" data-target="#busdestination" class="btn btn-primary stretched-link firstnext">Next</a>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-4">
                                                                <img class="img-responsive" src="public\img\images1.jpg" alt="Company logo">
                                                            </div>
                                                        </div>
                                                    </div>
                                                <hr>
                                            <% } %>
                                        </div>


                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <p>some blog</p>
                                </div>

                        </div>

                        <% include partials/pricing.ejs %>

                        <% include partials/contact.ejs %>
                    </div>

                    <% include layouts/footer.ejs %>
                </div>
                <script>
                    $(function () {
                        var datafrom = localStorage.getItem('firstkey');
                        var datato = localStorage.getItem('secondkey');

                        $('#from').val(datafrom);
                        $('#to').val(datato);
                    });
                </script>
        </body>

</html>