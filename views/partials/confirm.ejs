<div class="container">
    <!--modal-->
    <div class="modal fade" id="confirm" role="dialog">
        <div class="modal-dialog">
            <!--modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 style="color:brown;">Confirm ticket details</h4>
                </div>
                <div class="modal-body">
                    <h4>Company bus : <span class="bus"></span></h4>
                    <h4>From : <span class="initial"></span></h4>
                    <h4>To : <span class="final"></span></h4>
                    <h4>Departure date : <span class="leavedate"></span></h4>
                    <h4>Departure time : <span class="leavetime"></span></h4>
                    <h4>Bus number : <span class="busnumber"></span></h4>
                    <h4>Bus Location : <span class="location"></span></h4>
                    <h4>Seat number : <span class="seatnumber"></span></h4>
                    <h4>Price : <span class="price"></span></h4>
                    <h4>Duration : <span class="duration"></span></h4>
                    <button type="button" style="background:#f26e78;color:white" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!--ends here-->