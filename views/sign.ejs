<!DOCTYPE html>
<html lang="en">
<% include partials/head.ejs %>

    <body style="font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
        <div id="page">
            <% include layouts/header.ejs %>

                    <div id="content">
                        <div class="sign">
                            <div >
                                <div class="col-xs-12">
                                    <h4>Register now</h4>
                                    <form id="signupform" action="/token" method="post" onsubmit="return signValidator()">
                                        <i><span class="msg"></span></i>
                                        <div class="form-group">
                                            <label for="tel">Mobile number</label>
                                            <input type="tel" class="form-control num" required id="tel" minlength="10" maxlength="10" placeholder="example: 024000000">
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="psw">Password</label>  
                                            <input type="password" class="form-control passwd" id="psw" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="psw">Confirm Password</label>
                                            <input type="password" class="form-control cpasswd" id="cpsw" required>
                                        </div>
                                        <button type="submit" class="btn btn-default btn-success btn-block">Next</button>
                                    </form>
                                    <h4>Already have an account?
                                        <a class="dash-name" href="/login" style="color:red">Login here</a>
                                    </h4>
                                </div>
                            </div>

                        </div>
                    </div>

                        <% include layouts/footer.ejs %>
        </div>
    </body>

</html>